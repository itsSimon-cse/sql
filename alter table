create table emp_detail
(
    id int,
    name varchar2(10),
    salary number(5)
);
alter table emp_detail add address varchar(20);
desc emp_detail;
alter table emp_detail drop column address;--use column keyword
alter table emp_detail modify id varchar(30);
alter table emp_detail rename column id to roll_no;--use column keyword
alter table emp_detail rename to emp11; --remane use along with to 
desc emp11;


